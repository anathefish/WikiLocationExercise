<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.spacebanana.wikilocationexercise.MainActivity">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingBottom="20dp"
            android:text="Please, allow us to read this device location"
            app:layout_constraintLeft_toLeftOf="@+id/allow_btn"
            app:layout_constraintRight_toRightOf="@+id/allow_btn"
            app:layout_constraintBottom_toTopOf="@+id/allow_btn"/>

        <Button
            android:id="@+id/allow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>